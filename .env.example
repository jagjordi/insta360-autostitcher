APP_STORAGE_DIR=/mnt/cache/appdata/insta360-autostitcher
# RAW_DIR and OUT_DIR are host paths that will be bind-mounted to /app/raw and /app/stitched inside the backend container.
RAW_DIR=/mnt/cache/appdata/insta360-autostitcher/raw
OUT_DIR=/mnt/cache/appdata/insta360-autostitcher/stitched
AUTO_STITCHER_PORT=8000
FRONTEND_PORT=3000
MEDIA_SDK_DEB=backend/vendor/libMediaSDK-dev_2.0-0_amd64_ubuntu18.04.deb
# Leave VITE_API_BASE empty to let nginx proxy API calls (recommended for production builds).
VITE_API_BASE=
# Backend API URL reachable from the frontend host (used by nginx to proxy /status and /tasks)
BACKEND_API_URL=http://127.0.0.1:8000
